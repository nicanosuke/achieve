<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>お問い合わせ画面</h2>

    <%= form_for(@contact) do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>

      <div class="text-left">
        <p>以下の内容で送信します。</p>
        <p><%= f.label :名前 %></p>
        <div class="well well-sm">
          <%= @contact.name %>
        </div>
        <p><%= f.label :メールアドレス %></p>
        <div class="well well-sm">
          <%= @contact.email %>
        </div>
        <p><%= f.label :内容 %></p>
        <div class="well well-sm">
          <%= @contact.content %>
        </div>
      </div>

    <%= f.submit "送信", class: 'btn btn-primary btn-block' %>
    <% end %>

    <%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>